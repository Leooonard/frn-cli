{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react",
    // "module": "esnext",
    // "target": "esnext",
    // "jsx": "preserve",
    "sourceMap": false,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "allowJs": true,
    "rootDir": "webapp/src",
    "outDir": "webapp/dest",
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "webapp/@types"
    ]
  },
  "include": [
    "webapp/src/**/*"
  ]
}